<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.bitcoin.juwan.appgesture.gesture.GestureView
        android:id="@+id/gesture_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Hello World!"
        app:bigSelectGraphicalColor="@color/colorAccent"
        app:bigGraphicalColor="@color/colorPrimary"
        app:smallGraphicalColor="@android:color/transparent"
        app:smallSelectGraphicalColor="@color/colorAccent"
        app:lineColor="@color/colorAccent"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>